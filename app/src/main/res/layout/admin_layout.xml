<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/orange">
            <ImageView
                android:id="@+id/sao_admin"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/saoyisao"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="账户管理"
                android:textSize="@dimen/size_18sp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/admin_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/chuangjian1"/>
            <ImageView
                android:id="@+id/import_admin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/admin_add"
                android:layout_marginRight="30dp"
                android:background="@drawable/daoru3"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/num_main"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="导入的总数据量：0"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/code_main"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/size_16sp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <ListView
            android:id="@+id/admin_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>