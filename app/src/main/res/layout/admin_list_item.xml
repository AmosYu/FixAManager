<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/admin_item_name"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:textSize="@dimen/size_18sp"
            android:textColor="@color/black"
            android:text=""
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/admin_item_pwd"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/admin_item_name"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/admin_item_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/admin_item_pwd"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/admin_item_enter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="â–¶"
                android:gravity="center"
                android:textSize="@dimen/size_35sp"
                android:textColor="@color/orange"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>